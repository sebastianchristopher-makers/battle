<h1><%= @game.player_1.name %> vs <%= @game.player_2.name %></h1>
<p>Player 1: <%= @game.player_1.name %> HP: <%= @game.player_1.hp %></p>
<p>Player 2: <%= @game.player_2.name %> HP: <%= @game.player_2.hp %></p>

<form name='attack' action='/attack' method='POST'>
  <input type='submit' value='Attack'>
</form>

<% if @attack %>
  <p><%= @message %></p>
<% end %>
